@model IEnumerable<Employee>

@{ 
    ViewBag.Title = "Employees List";
}
<div class="card-group">
    @foreach(var employee in Model)
    {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "bau.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
                <img class="card-img-top" src="@photoPath" 
                     asp-append-version="true" height="300"/>
                <div class="card-footer text-center">
                    <div class="btn-group">
                        <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                           class="btn btn-primary m-1">View</a>
                        <a asp-controller="home" asp-action="edit"
                           asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                        <a class="btn btn-danger m-1" asp-controller="home" asp-action="delete"
                           asp-route-id="@employee.Id">Delete</a>
                    </div>
                   
                </div>
        </div>
    }
</div>
